# Dockerfile for Ubuntu LTS GNAT

# latest is actually latest LTS
FROM ubuntu:latest  

RUN apt-get update && \
    apt-get install -y \
        bash \
        curl \
        git \
        gnat \
        gprbuild \
        mercurial \
        python-pip \
        subversion \
        sudo \
        unzip \
        wget && \
    apt-get clean && \
\
    pip install e3-testsuite
